            <% end %>
          </div>
        </div>
      </div>
      <div class="nav_center">
        <div class="nav_center_container">
          <ul class="list_header_nav">
            <li><%= link_to "はじめる",root_path ,class: :nav_items %></li>
            <li><a href="javascript:void(0);" id="find">みつける</a></li>
            <li><%= link_to "MOROHEIYAとは",root_path, class: :nav_items %></li>
            <li><%= link_to "使い方",root_path, class: :nav_items %></li>
          </ul>
        </div>
      </div>
      <div class="nav_right">
        <%# unless user_signed_in? %>
          <div class="nav_right_container">
            <div class="left_btn" id="left-btn">
              <%= link_to "ログイン", root_path %>
            </div>
            <div class="right_btn" id="right-btn">
              <%= link_to "新規登録", root_path %>
            </div>
          </div>
        <%# else %>
          <%#<div class="nav_right_container">
            <%# <div class="left_btn" id="left-btn">
              <%= "◯" %>
            <%# <%= link_to "ニックネーム", root_path %>
            <%#</div>
            <div class="right_btn" id="right-btn">
              <%= link_to "ログアウト", root_path %>
            <%#</div>
          </div>
        <%# end %>
        </div>
      </div>
    </div>
  </div>
  <div class="find_list" id="find-list">
    <div class="find_list_container" id="find-list-zone">
      <div class="find_list_title">
        <h3>コンテストをさがす</h3>
      </div>
      <div class="find_list_division">
        <h4 class="division_genre">ジャンル</h4>
        <h4 class="division_category">カテゴリ</h4>
      </div>
      <div class="find_list_items">
        <div class="find_list_genre_container">
          <ul class="find_list_genre">
            <li class="list_item"><%= link_to "画像系", root_path %></li>
            <li class="list_item"><%= link_to "動画系", root_path %></li>
          </ul>
