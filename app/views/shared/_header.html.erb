          <li class="list_item"><%= link_to "アニメ・マンガ", root_path %></li>
        </ul>
        <ul class="find_list_category_2">
          <li class="list_item"><%= link_to "ゲーム", root_path %></li>
          <li class="list_item"><%= link_to "ビジネス", root_path %></li>
          <li class="list_item"><%= link_to "アート・イラスト", root_path %></li>
