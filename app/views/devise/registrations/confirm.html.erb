<%= render 'shared/header' %>

<%= form_with model: @user, url: user_registration_path, class: 'registration', local: true do |f| %>
  <div class="form_wrapper">
    <div class="form_initial">
      <h1 class="user_information">ユーザー情報(確認)</h1>
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
    <div class="user_information_area">
      <div class="form_group">
        <div class='form_text_wrap'>
          <label class="form_text">ニックネーム</label>
        </div>
        <%= @user.nickname%>
      </div>

      <div class="form_group">
        <div class='form_text_wrap'>
          <label class="form_text">メールアドレス</label>
        </div>
        <%= @user.email %>
      </div>

      <div class="form_group">
        <div class='form_text_wrap'>
          <label class="form_text">パスワード</label>
        </div>
        <%= @password %>
      </div>

      <div class="form_group">
        <div class='form_text_wrap'>
          <label class="form_text">パスワード(確認)</label>
        </div>
        <%= @password %>
      </div>
    </div>
    <div class="identification_area">
      <h2 class="identification">本人確認情報(確認)</h2>
      <div class="form_group">
        <div class='form_text_wrap'>
          <label class="form_text">お名前(全角)</label>
        </div>
        <div class='input_name_wrap'>
          <%= @user.family_name %>
          <%= @user.first_name %>
        </div>
      </div>
      <div class="form_group">
        <div class='form_text_wrap'>
          <label class="form_text">お名前カナ(全角)</label>
        </div>
        <div class='input_name_wrap'>
          <%= @user.family_name_kana %>
          <%= @user.first_name_kana %>
        </div>
      </div>
      <div class="form_group">
        <div class='form_text_wrap'>
          <label class="form_text">生年月日</label>
        </div>
        <%= @user.birthday %>
      </div>
    </div>
    <div class="submit_area">
      <div class="actions">
        <%= f.submit "新規登録",class: :sign_submit_button %>
      </div>
    </div>
  </div>
  <div class="from_information" style="display: none;">
    <%= f.text_area :nickname, class:"input_default", id:"nickname", value: @user.nickname %>
    <%= f.email_field :email, class:"input_default", id:"email", value: @user.email %>
    <%= f.password_field :password, class:"input_default", id:"password", value: @user.password %>
    <%= f.password_field :password_confirmation, class:"input_default", id:"password-confirmation", value: @user.password_confirmation %>
    <%= f.text_area :family_name, class:"input_name_left", id:"last-name", value: @user.family_name %>
    <%= f.text_area :first_name, class:"input_name_right", id:"first-name", value: @user.first_name %>
    <%= f.text_area :family_name_kana, class:"input_name_left", id:"last-name", value: @user.family_name_kana %>
    <%= f.text_area :first_name_kana, class:"input_name_right", id:"first-name", value: @user.first_name_kana %>
    <%= f.text_area :birthday, class:"select-birth", id:"birth-date", value: @user.birthday %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%= render 'shared/footer' %>