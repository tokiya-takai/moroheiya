<%= render 'shared/header' %>

<div class="order_wrapper">
  <%= form_with model: @order, url: confirm_orders_path, local: true do |f|%>

    <div class="order_container">
      <h1>いいねを購入する</h1>
      <%= render 'error_messages', model: f.object%>
      <div class="order_group">
        <div class="order_icon_container">
          <%= image_tag 'black_icon.png'%>
        </div>
        <p>blackいいね &nbsp;@¥500</p>
        <div class="order_input">
          <%= f.number_field :black, min: 0 %>
        </div>
      </div>
      <div class="order_group">
        <div class="order_icon_container">
          <%= image_tag 'gold_icon.png'%>
        </div>
        <p>goldいいね &nbsp;&nbsp;&nbsp;@¥200</p>
        <div class="order_input">
          <%= f.number_field :gold, min: 0 %>
        </div>
      </div>
      <div class="order_group">
        <div class="order_icon_container">
          <%= image_tag 'purple_icon.png'%>
        </div>
        <p>purpleいいね @¥100</p>
        <div class="order_input">
          <%= f.number_field :purple, min: 0 %>
        </div>
      </div>
      <button class="order_button"><%= f.submit '確認'%></button>
    </div>
  <% end %>
</div>

<%= render 'shared/footer' %>