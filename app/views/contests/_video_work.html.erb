<li class="list_work">
  <div class="work_frame">
    <%= link_to contest_work_path(@contest.id,video_work.id) do %>
      <div class="work_image_frame">
        <%= image_tag video_work.image %>
      </div>
      <div class="work_information_area">
        <% if video_work.user.image.attached? %>
          <% if video_work.user.count_first >= 1 %>
            <p class="work_user_nickname"><%= image_tag(video_work.user.image, class: :work_user_icon )%><%= video_work.user.nickname %><%= image_tag 'proof_name.png',class: :user_proof_icon %>さんの作品</p>
          <% else %>
            <p class="work_user_nickname"><%= image_tag(video_work.user.image, class: :work_user_icon )%><%= video_work.user.nickname %>さんの作品</p>
          <% end %>
        <% else %>
          <% if video_work.user.count_first >= 1 %>
            <p class="work_user_nickname"><%= image_tag('user_icon.svg', class: :work_user_icon )%><%= video_work.user.nickname %><%= image_tag 'proof_name.png',class: :user_proof_icon %>さんの作品</p>
          <% else %>
            <p class="work_user_nickname"><%= image_tag('user_icon.svg', class: :work_user_icon )%><%= video_work.user.nickname %>さんの作品</p>
          <% end %>
        <% end %>
        <div class="work_content_container">
          <%= video_work.content%>
        </div>
        <ul class="list_favorite_icons">
          <li class="favorite_icons"><%= image_tag 'black_icon.png', class: :work_fav_icons %><%= video_work.favorite.black_favorite.to_s(:delimited) %></li>
          <li class="favorite_icons"><%= image_tag 'gold_icon.png', class: :work_fav_icons %><%= video_work.favorite.gold_favorite.to_s(:delimited) %></li>
          <li class="favorite_icons"><%= image_tag 'purple_icon.png', class: :work_fav_icons %><%= video_work.favorite.purple_favorite.to_s(:delimited) %></li>
          <li class="favorite_icons"><%= image_tag 'normal_icon.png', class: :work_fav_icons %><%= video_work.favorite.normal_favorite.to_s(:delimited) %></li>
        </ul>
      </div>
    <% end %>
  </div>
</li>