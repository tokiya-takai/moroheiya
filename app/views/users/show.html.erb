<%= render 'shared/header' %>
  <div class="user_wrapper">
    <div class="user_upper_container">
      <div class="user_image_container">
        <div class="user_image_frame">
          <% if @user.image.attached? %>
            <%= image_tag(@user.image, class: :user_image) %>
          <% else %>
            <%= image_tag'user_icon.svg', class: :user_image %>
          <% end %>
        </div>
      </div>
      <div class="user_nickname_container">
        <h1><%= @user.nickname %></h1>
      </div>
      <div class="user_edit_button_container">
        <%if @user.id == current_user.id%><button class="user_edit_button_frame"><%= link_to '編集',edit_user_registration_path %></button><%end%>
      </div>
    </div>
    <div class="user_middle_container">
      <h2>プロフィール<span class="rotation_arrow_area"><%= image_tag'rotation.svg', class: :rotation_arrow %></span></h2>
      <div class="user_profile_container">
        <p class="user_profile"><%if @user.other_user.profile != nil %><%= @user.other_user.profile %><%else%>まだプロフィールがありません。<%end%></p>
      </div>
    </div>
    <div class="user_lower_container">
      <ul class="user_medal_list">
        <li class="list_user_cup"><%= image_tag'cup.svg', class: :user_medals if @user.other_user.count_first >= 5 %></li>
        <li class="list_user_count_first"><% if @user.other_user.count_first >= 1 %><%= image_tag'first.svg', class: :user_medals %><%= @user.other_user.count_first%><%end%></li>
        <li class="list_user_count_second"><% if @user.other_user.count_second >= 1 %><%= image_tag'second.svg', class: :user_medals %><%= @user.other_user.count_second%><%end%></li>
        <li class="list_user_count_third"><% if @user.other_user.count_third >= 1 %><%= image_tag'third.svg', class: :user_medals %><%= @user.other_user.count_third%><%end%></li>
      </ul>
    </div>
  </div>
<%= render 'shared/footer' %>